@model Models.ViewModels.PlanoRestritoViewModel
@{
    ViewData["Title"] = "Recurso indisponível";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center py-5">
                    <div class="mb-3">
                        <span class="badge bg-warning text-dark text-uppercase">Plano limitado</span>
                    </div>
                    <h2 class="fw-bold mb-3">@Model.Modulo</h2>
                    <p class="lead text-muted">
                        Este recurso está disponível apenas para o plano
                        <strong>@Model.PlanoNecessario</strong>.
                    </p>
                    <p class="text-muted">
                        Seu plano atual é <strong>@Model.PlanoAtual</strong>. Para liberar este módulo, faça o upgrade do plano
                        nas configurações ou fale com o suporte.
                    </p>
                    <div class="mt-4 d-flex flex-column flex-sm-row gap-2 justify-content-center">
                        <a asp-controller="Painel" asp-action="Index" class="btn btn-outline-secondary">
                            Voltar ao painel
                        </a>
                        <a asp-controller="Suporte" asp-action="Index" class="btn btn-primary">
                            Ver planos disponíveis
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
