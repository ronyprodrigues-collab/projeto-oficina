@model IEnumerable<Models.PecaEstoque>
@{
    ViewData["Title"] = "Estoque";
}

<h1>Estoque</h1>

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Unidade</th>
            <th class="text-end">Saldo</th>
            <th class="text-end">Estoque m√≠nimo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        var low = item.EstoqueMinimo > 0 && item.SaldoAtual < item.EstoqueMinimo;
        <tr class="@(low ? "table-warning" : string.Empty)">
            <td>@item.Nome</td>
            <td>@item.UnidadeMedida</td>
            <td class="text-end">@item.SaldoAtual</td>
            <td class="text-end">@item.EstoqueMinimo</td>
            <td class="text-end">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">Detalhes</a>
            </td>
        </tr>
    }
    </tbody>
</table>
