@model Models.Configuracoes
@{
    ViewData["Title"] = "Configurações da Oficina";
}

<h1 class="mb-4">Configurações da Oficina</h1>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Identidade visual</div>
            <div class="card-body">
                <div class="mb-3 d-flex align-items-center gap-3">
                    <img src="@Model.LogoPath" alt="Logo" style="height:64px" onerror="this.style.display='none'" />
                    <div>
                        <div><strong>Nome da oficina:</strong> @Model.NomeOficina</div>
                        <div><strong>Logo atual:</strong> @(Model.LogoPath ?? "(não definido)")</div>
                    </div>
                </div>
                <form asp-action="AlterarLogo" asp-controller="Suporte" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Enviar nova logo</label>
                        <input type="file" name="logo" class="form-control" accept="image/*" />
                    </div>
                    <button class="btn btn-primary" type="submit">Salvar logo</button>
                    @Html.AntiForgeryToken()
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">Cores do tema</div>
            <div class="card-body">
                <form asp-action="AlterarCores" asp-controller="Suporte" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Cor Primária</label>
                            <input type="color" name="corPrimaria" class="form-control form-control-color" value="@Model.CorPrimaria" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Cor Secundária</label>
                            <input type="color" name="corSecundaria" class="form-control form-control-color" value="@Model.CorSecundaria" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Nome da Oficina</label>
                            <input type="text" name="nomeOficina" class="form-control" value="@Model.NomeOficina" />
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-success" type="submit">Salvar cores</button>
                        @Html.AntiForgeryToken()
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">Pré-visualização de tema</div>
    <div class="card-body">
        <div class="mb-3 small text-muted">Ajuste as cores acima para ver a prévia ao vivo. A página aplica as novas cores temporariamente até você salvar.</div>
        <nav class="navbar mb-3" style="background-color: var(--ofc-navbar-bg); color: #fff;">
            <div class="container-fluid">
                <span class="navbar-brand">Prévia - @Model.NomeOficina</span>
                <span class="badge" style="background-color: var(--ofc-primary);">Primária</span>
            </div>
        </nav>
        <div class="row g-3">
            <div class="col-md-4">
                <div class="p-3 border rounded" style="border-color: var(--ofc-border); background: rgba(13,110,253,.05)">
                    <div class="text-muted small">Botões</div>
                    <button type="button" class="btn btn-sm" style="background: var(--ofc-primary); color: #fff;">Primário</button>
                    <button type="button" class="btn btn-sm" style="background: var(--ofc-secondary); color: #fff;">Secundário</button>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded" style="border-color: var(--ofc-border);">
                    <div class="text-muted small">Cards</div>
                    <div class="card border-0" style="background: rgba(25,135,84,.1);">
                        <div class="card-body">
                            <div class="small text-muted">Exemplo</div>
                            <div class="fw-bold">Cores da Oficina</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 border rounded" style="border-color: var(--ofc-border);">
                    <div class="text-muted small mb-2">Logo</div>
                    <img id="logoPreview" src="@Model.LogoPath" alt="Prévia da logo" style="height:64px" onerror="this.style.display='none'" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    (function(){
        const root = document.documentElement;
        const primaryInput = document.querySelector('input[name="corPrimaria"]');
        const secondaryInput = document.querySelector('input[name="corSecundaria"]');
        const nameInput = document.querySelector('input[name="nomeOficina"]');
        const logoInput = document.querySelector('input[type="file"][name="logo"]');
        const logoImg = document.getElementById('logoPreview');

        function applyPreview(){
            if (primaryInput && primaryInput.value) {
                root.style.setProperty('--ofc-primary', primaryInput.value);
                root.style.setProperty('--ofc-navbar-bg', primaryInput.value);
            }
            if (secondaryInput && secondaryInput.value) {
                root.style.setProperty('--ofc-secondary', secondaryInput.value);
            }
        }

        primaryInput?.addEventListener('input', applyPreview);
        secondaryInput?.addEventListener('input', applyPreview);
        applyPreview();

        if (logoInput && window.FileReader) {
            logoInput.addEventListener('change', function(){
                const file = this.files && this.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = e => { if (logoImg) { logoImg.style.display=''; logoImg.src = e.target.result; } };
                reader.readAsDataURL(file);
            });
        }
    })();
</script>
}
