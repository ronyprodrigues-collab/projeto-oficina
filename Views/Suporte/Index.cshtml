@model Models.ViewModels.SuporteConfiguracaoViewModel
@using Infrastructure.Theming
@{
    ViewData["Title"] = "Configurações da Oficina";
    var oficina = Model.Oficina;
    var grupoAtual = Model.GrupoSelecionado ?? Model.Grupos.FirstOrDefault(g => g.Id == Model.GrupoSelecionadoId);
    var temaAtual = Model.TemaAtual ?? ThemePalettes.FromColors(grupoAtual?.CorPrimaria, grupoAtual?.CorSecundaria);
    var coresPreviewPrimaria = temaAtual.PrimaryHex;
    var coresPreviewSecundaria = temaAtual.SecondaryHex;
    var canGerenciarTema = User.IsInRole("SuporteTecnico") || User.IsInRole("Admin") || User.IsInRole("Diretor");
    string PlanoLabel(Models.PlanoConta plano) => plano switch
    {
        Models.PlanoConta.Basico => "Plano Básico",
        Models.PlanoConta.Pro => "Plano Pro",
        Models.PlanoConta.Plus => "Plano Plus",
        _ => plano.ToString()
    };
}

<style>
    .theme-option {
        border: 1px solid var(--ofc-border);
        border-radius: .75rem;
        padding: 1rem;
        display: block;
        cursor: pointer;
        height: 100%;
        transition: border-color .2s ease, box-shadow .2s ease;
    }
    .theme-option input[type="radio"] {
        display: none;
    }
    .theme-option.active {
        border-color: var(--ofc-primary);
        box-shadow: 0 0 0 2px rgba(var(--ofc-primary-rgb), .25);
    }
    .theme-option .theme-swatches {
        display: flex;
        gap: .5rem;
    }
    .theme-option .swatch {
        width: 48px;
        height: 32px;
        border-radius: .5rem;
        border: 1px solid rgba(0,0,0,.1);
    }
</style>

<div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-4">
    <h1 class="mb-0">Configurações da Oficina</h1>
    <div class="btn-group">
        @if (User.IsInRole("SuporteTecnico"))
        {
            <a asp-action="UsuariosPendentes" class="btn btn-outline-primary">Usuários pendentes</a>
            <a asp-action="ReatribuirUsuario" class="btn btn-outline-primary">Reatribuir usuários</a>
            <a asp-controller="Grupos" asp-action="Create" class="btn btn-success">
                Criar grupo de oficinas
            </a>
        }
    </div>
</div>

<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <label class="form-label">Grupo</label>
        <select name="grupoId" class="form-select" onchange="this.form.submit()">
            @foreach (var grupo in Model.Grupos)
            {
                <option value="@grupo.Id" selected="@(grupo.Id == Model.GrupoSelecionadoId ? "selected" : null)">
                    @grupo.Nome (@grupo.Plano)
                </option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label class="form-label">Oficina</label>
        <select name="oficinaId" class="form-select" onchange="this.form.submit()">
            @if (!Model.Oficinas.Any())
            {
                <option value="">Nenhuma oficina disponível</option>
            }
            else
            {
                foreach (var of in Model.Oficinas)
                {
                    <option value="@of.Id" selected="@(of.Id == Model.OficinaSelecionadaId ? "selected" : null)">@of.Nome</option>
                }
            }
        </select>
    </div>
    <div class="col-md-4 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Carregar</button>
    </div>
</form>

@if (TempData["FixMsg"] != null)
{
    <div class="alert alert-info">@TempData["FixMsg"]</div>
}

@if (oficina == null)
{
    <div class="alert alert-warning">Selecione um grupo e uma oficina para editar as configurações.</div>
}

<div class="row g-4">
    <div class="col-lg-6">
        @if (oficina == null)
        {
            <div class="card h-100">
                <div class="card-body">
                    <p class="text-muted mb-0">Escolha uma oficina para alterar logo ou renomear.</p>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">Identidade visual</div>
                <div class="card-body">
                    <div class="mb-3 d-flex align-items-center gap-3">
                        @if (!string.IsNullOrWhiteSpace(oficina.LogoPath))
                        {
                            <img src="@oficina.LogoPath" style="height:64px" alt="Logo" />
                        }
                        else
                        {
                            <div class="text-muted">Sem logo definida</div>
                        }
                    </div>
                    <form asp-action="AlterarLogo" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="grupoId" value="@Model.GrupoSelecionadoId" />
                        <input type="hidden" name="oficinaId" value="@Model.OficinaSelecionadaId" />
                        <div class="mb-3">
                            <label class="form-label">Enviar nova logo</label>
                            <input type="file" name="logo" class="form-control" accept="image/*" />
                        </div>
                        <button class="btn btn-primary" type="submit">Salvar logo</button>
                    </form>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">Nome da oficina</div>
                <div class="card-body">
                    <form asp-action="AtualizarOficina" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="grupoId" value="@Model.GrupoSelecionadoId" />
                        <input type="hidden" name="oficinaId" value="@Model.OficinaSelecionadaId" />
                        <div class="mb-3">
                            <label class="form-label">Nome da Oficina</label>
                            <input type="text" name="nomeOficina" class="form-control" value="@oficina?.Nome" />
                        </div>
                        <button class="btn btn-success" type="submit">Salvar nome</button>
                    </form>
                </div>
            </div>
        }
    </div>
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Tema do grupo</span>
                @if (grupoAtual != null)
                {
                    <span class="badge bg-light text-dark">@grupoAtual.Nome</span>
                }
            </div>
            <div class="card-body">
                @if (canGerenciarTema)
                {
                    <form asp-action="AlterarTemaGrupo" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="grupoId" value="@Model.GrupoSelecionadoId" />
                        <input type="hidden" name="oficinaId" value="@Model.OficinaSelecionadaId" />
                        <div class="row g-3">
                            @foreach (var palette in Model.Paletas)
                            {
                                var isActive = string.Equals(palette.PrimaryHex, temaAtual.PrimaryHex, System.StringComparison.OrdinalIgnoreCase)
                                               && string.Equals(palette.SecondaryHex, temaAtual.SecondaryHex, System.StringComparison.OrdinalIgnoreCase);
                                <div class="col-sm-6">
                                    <label class="theme-option @(isActive ? "active" : string.Empty)">
                                        <input type="radio" name="paletteKey" value="@palette.Key" @(isActive ? "checked" : null) />
                                        <span class="fw-semibold">@palette.Name</span>
                                        <small class="text-muted d-block">@palette.Description</small>
                                        <div class="theme-swatches mt-2">
                                            <span class="swatch" style="background:@palette.PrimaryHex"></span>
                                            <span class="swatch" style="background:@palette.SecondaryHex"></span>
                                        </div>
                                    </label>
                                </div>
                            }
                        </div>
                        <div class="mt-3 text-end">
                            <button class="btn btn-success" type="submit">Aplicar tema</button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        Somente Diretores, Suporte Técnico ou Administradores podem alterar o tema do grupo.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (oficina != null)
{
    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Plano da oficina</span>
            <span class="badge bg-primary">@PlanoLabel(oficina.Plano)</span>
        </div>
        <div class="card-body">
            <form asp-action="AlterarPlano" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="grupoId" value="@Model.GrupoSelecionadoId" />
                <input type="hidden" name="oficinaId" value="@Model.OficinaSelecionadaId" />
                <div class="row g-3">
                    @foreach (var plano in (Models.PlanoConta[])System.Enum.GetValues(typeof(Models.PlanoConta)))
                    {
                        <div class="col-md-4">
                            <div class="form-check border rounded p-3 @(oficina.Plano == plano ? "border-primary" : "border-secondary-subtle")">
                                <input class="form-check-input" type="radio" name="plano" value="@plano" id="plano_@plano" @(oficina.Plano == plano ? "checked" : "") />
                                <label class="form-check-label fw-bold" for="plano_@plano">@PlanoLabel(plano)</label>
                                <ul class="small text-muted mt-2 mb-0">
                                    @if (plano == Models.PlanoConta.Basico)
                                    {
                                        <li>Cadastro de clientes/veículos</li>
                                        <li>OS com peças simples</li>
                                    }
                                    else if (plano == Models.PlanoConta.Pro)
                                    {
                                        <li>Controle de estoque completo</li>
                                        <li>Movimentações FIFO</li>
                                    }
                                    else
                                    {
                                        <li>Financeiro avançado (em desenvolvimento)</li>
                                        <li>Relatórios multi-oficina</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Salvar plano</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">Pré-visualização</div>
        <div class="card-body">
            <div class="p-4 mb-3 rounded text-white" style="background:@coresPreviewPrimaria;">
                Prévia - @oficina.Nome
            </div>
            <div class="d-flex gap-2 mb-3">
                <button class="btn" style="background:@coresPreviewPrimaria;color:#fff;">Primário</button>
                <button class="btn" style="background:@coresPreviewSecundaria;color:#fff;">Secundário</button>
            </div>
            @if (!string.IsNullOrWhiteSpace(oficina.LogoPath))
            {
                <img src="@oficina.LogoPath" alt="Prévia da logo" style="height:48px" />
            }
        </div>
    </div>
}

<div class="card mt-4">
    <div class="card-header">Manutenção</div>
    <div class="card-body">
        <p class="text-muted">Correção para dados salvos 100x maiores (teste). Executa divisão por 100 em valores elegíveis.</p>
        <form asp-action="CorrigirValoresTeste" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-warning" type="submit">Corrigir valores (+100 = ×100)</button>
        </form>
    </div>
</div>

@if (canGerenciarTema)
{
    @section Scripts {
        <script>
            document.querySelectorAll('.theme-option input[type="radio"]').forEach(radio => {
                radio.addEventListener('change', () => {
                    document.querySelectorAll('.theme-option').forEach(opt => opt.classList.remove('active'));
                    if (radio.checked) {
                        radio.closest('.theme-option')?.classList.add('active');
                    }
                });
            });
        </script>
    }
}
