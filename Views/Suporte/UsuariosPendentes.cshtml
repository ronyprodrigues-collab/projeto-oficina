@model IEnumerable<Models.ViewModels.UsuarioPendenteViewModel>
@{
    ViewData["Title"] = "Usuários pendentes";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h1 class="mb-0">Usuários sem grupo/oficina</h1>
    <a class="btn btn-outline-secondary" asp-action="Index">Voltar ao painel</a>
    <a class="btn btn-primary" asp-controller="Convites" asp-action="Index">Gerenciar convites</a>
</div>

@if (TempData["FixMsg"] != null)
{
    <div class="alert alert-success">@TempData["FixMsg"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="alert alert-info">
    Selecione um usuário recém-registrado, atribua-o como Diretor e, em seguida, crie um grupo e a primeira oficina para ele.
</div>

<div class="table-responsive">
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Cargo informado</th>
                <th>Perfis atuais</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var ehDiretor = user.Perfis?.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries).Contains("Diretor") ?? false;
                <tr>
                    <td>@user.Nome</td>
                    <td>@user.Email</td>
                    <td>@(string.IsNullOrWhiteSpace(user.Cargo) ? "-" : user.Cargo)</td>
                    <td>@(string.IsNullOrWhiteSpace(user.Perfis) ? "-" : user.Perfis)</td>
                    <td class="text-end">
                        <form asp-action="DefinirDiretor" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-primary @(ehDiretor ? "disabled" : string.Empty)">
                                @(ehDiretor ? "Já é Diretor" : "Definir como Diretor")
                            </button>
                        </form>
                        <a class="btn btn-sm btn-success ms-1 @(ehDiretor ? string.Empty : "disabled")"
                           asp-controller="Grupos"
                           asp-action="Create"
                           asp-route-diretorId="@user.Id">
                            Criar grupo e oficina
                        </a>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Nenhum usuário pendente.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
