@model Models.ViewModels.VincularClienteViewModel
@{
    ViewData["Title"] = "Vincular Cliente Existente";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="m-0">Vincular cliente existente</h1>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-6">
        <input type="text" name="busca" value="@Model.Busca" class="form-control" placeholder="Buscar por nome ou documento" />
    </div>
    <div class="col-md-3 d-grid">
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

@if (!Model.Clientes.Any())
{
    <div class="alert alert-info">
        Nenhum cliente disponível para vínculo. Cadastre um novo ou ajuste o filtro de busca.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Documento</th>
                    <th>Origem</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var cliente in Model.Clientes)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Documento</td>
                    <td>@cliente.Origem</td>
                    <td class="text-end">
                        <form asp-action="VincularCliente" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="clienteId" value="@cliente.Id" />
                            <button type="submit" class="btn btn-sm btn-success">Vincular</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
