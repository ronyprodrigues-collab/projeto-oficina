@model Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h1>Excluir Cliente</h1>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CPF_CNPJ)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF_CNPJ)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        @if (!string.IsNullOrWhiteSpace(Model?.Numero))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Numero)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Numero)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.Bairro))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Bairro)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Bairro)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.Cidade))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Cidade)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Cidade)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.Estado))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Estado)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Estado)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.CEP))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CEP)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.CEP)</dd>
        }
        @if (Model?.DataNascimento != null)
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.DataNascimento)</dt>
            <dd class="col-sm-10">@Model.DataNascimento?.ToString("dd/MM/yyyy")</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.TipoCliente))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.TipoCliente)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.TipoCliente)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.CNPJ))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.CNPJ)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.CNPJ)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.Responsavel))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Responsavel)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Responsavel)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.Responsavel))
        {
            <dt class="col-sm-2">Respons√°vel pelo Cadastro</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Responsavel)</dd>
        }
        @if (!string.IsNullOrWhiteSpace(Model?.Observacoes))
        {
            <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Observacoes)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(m => m.Observacoes)</dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
    </form>
</div>
