@model Models.ViewModels.ConviteInputViewModel
@{
    ViewData["Title"] = "Novo convite";
}

<h1>Novo convite</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-mail convidado</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PerfilDestino" class="form-label">Perfil</label>
                <select asp-for="PerfilDestino" class="form-select" asp-items="Model.Perfis"></select>
            </div>

            <div class="mb-3">
                <label asp-for="PercentualComissao" class="form-label"></label>
                <input asp-for="PercentualComissao" class="form-control" type="number" step="0.01" min="0" />
                <div class="form-text">Utilizado para mec√¢nicos. Deixe 0 para outros perfis.</div>
            </div>

            <div class="mb-3">
                <label asp-for="ExpiraEm" class="form-label"></label>
                <input asp-for="ExpiraEm" class="form-control" type="datetime-local" />
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">Gerar convite</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
