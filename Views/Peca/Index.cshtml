@model IEnumerable<Models.PecaEstoque>
@{
    ViewData["Title"] = "Peças";
    var msg = TempData["Msg"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Catálogo de Peças</h1>
    <a asp-action="Create" class="btn btn-primary">Nova peça</a>
</div>

@if (!string.IsNullOrEmpty(msg))
{
    <div class="alert alert-success">@msg</div>
}

<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Código</th>
            <th>Unidade</th>
            <th class="text-end">Saldo</th>
            <th class="text-end">Est. mínimo</th>
            <th class="text-end">Preço venda</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        var low = item.EstoqueMinimo > 0 && item.SaldoAtual < item.EstoqueMinimo;
        <tr class="@(low ? "table-warning" : string.Empty)">
            <td>@item.Nome</td>
            <td>@item.Codigo</td>
            <td>@item.UnidadeMedida</td>
            <td class="text-end">@item.SaldoAtual</td>
            <td class="text-end">@item.EstoqueMinimo</td>
            <td class="text-end">@item.PrecoVenda?.ToString("C")</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
