@model Models.GrupoOficina
@{
    ViewData["Title"] = "Detalhes do Grupo";
    var admins = ViewBag.Admins as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    string adminAtual = "-";
    if (Model.Administrador != null)
    {
        adminAtual = !string.IsNullOrWhiteSpace(Model.Administrador.NomeCompleto)
            ? Model.Administrador.NomeCompleto
            : (Model.Administrador.Email ?? Model.Administrador.UserName ?? Model.Administrador.Id ?? "-");
    }
}

<h1>@Model.Nome</h1>
@{
    var limiteGrupo = Model.Plano switch
    {
        Models.PlanoConta.Basico => 1,
        Models.PlanoConta.Pro => 2,
        Models.PlanoConta.Plus => 0,
        _ => 0
    };
}
<p class="text-muted">
    Plano: @Model.Plano
    @if (limiteGrupo > 0)
    {
        <span>| Oficinas: @Model.Oficinas.Count / @limiteGrupo</span>
    }
</p>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-3">Administrador do grupo</h5>
        <p class="mb-3">Atual: <strong>@adminAtual</strong></p>
        <form asp-action="DefinirAdministrador" method="post" class="row g-2 align-items-end">
            @Html.AntiForgeryToken()
            <input type="hidden" name="grupoId" value="@Model.Id" />
            <div class="col-lg-6">
                <label class="form-label">Selecionar administrador</label>
                <select name="adminId" class="form-select" asp-items="admins">
                    <option value="">(sem administrador)</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mt-3 mt-lg-0">Salvar</button>
            </div>
        </form>
        <div class="mt-3">
            <a class="btn btn-outline-success btn-sm" asp-action="CriarAdministrador" asp-route-grupoId="@Model.Id">
                Cadastrar novo administrador
            </a>
        </div>
        <p class="text-muted small mt-2 mb-0">Cada grupo pode ter apenas um administrador responsável.</p>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="m-0">Oficinas (@Model.Oficinas.Count)</h4>
    <a class="btn btn-sm btn-success" asp-action="CriarOficina" asp-route-grupoId="@Model.Id">Nova Oficina</a>
</div>

@if (Model.Oficinas.Count == 0)
{
    <div class="alert alert-info">Nenhuma oficina cadastrada neste grupo.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Plano</th>
                <th>Administrador</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var oficina in Model.Oficinas)
        {
            <tr>
                <td>@oficina.Nome</td>
                <td>@oficina.Plano</td>
                <td>@(oficina.AdminProprietario != null ? oficina.AdminProprietario.NomeCompleto : "-")</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="GerenciarUsuarios" asp-route-oficinaId="@oficina.Id">Usuários</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary">Voltar</a>
