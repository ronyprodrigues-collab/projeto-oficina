@model IEnumerable<Models.GrupoOficina>
@{
    ViewData["Title"] = "Meus Grupos";
}

<h1 class="mb-3">Meus Grupos</h1>

@if (!Model.Any())
{
    <div class="alert alert-warning">Nenhum grupo foi atribuído ao seu usuário.</div>
}
else
{
    <div class="row g-3">
        @foreach (var grupo in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@grupo.Nome</h5>
                        <p class="text-muted">Plano: @grupo.Plano</p>
                        @{
                            var limite = grupo.Plano switch
                            {
                                Models.PlanoConta.Basico => 1,
                                Models.PlanoConta.Pro => 2,
                                Models.PlanoConta.Plus => 0,
                                _ => 0
                            };
                        }
                        <p class="mb-1">
                            Oficinas: @grupo.Oficinas.Count
                            @if (limite > 0)
                            {
                                <span class="text-muted">/ @limite</span>
                            }
                        </p>
                        <a asp-action="DetalhesGrupo" asp-route-id="@grupo.Id" class="btn btn-sm btn-primary">Gerenciar</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
