@model Models.ViewModels.EditFuncionarioViewModel
@{
    ViewData["Title"] = "Editar Funcionário";
}

<h1>Editar Funcionário</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label class="form-label">Nome Completo</label>
                <input asp-for="NomeCompleto" class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">E-mail</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>
            <div class="mb-3">
                <label class="form-label">Cargo</label>
                <select asp-for="Cargo" class="form-select">
                    <option>Supervisor</option>
                    <option>Mecanico</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Nova senha (opcional)</label>
                <input asp-for="NovaSenha" class="form-control" type="password" />
            </div>
            <div class="form-check mb-3">
                <input asp-for="Ativo" class="form-check-input" />
                <label class="form-check-label" for="Ativo">Ativo</label>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>
