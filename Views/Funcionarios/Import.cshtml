@model Models.ViewModels.ImportFuncionariosViewModel
@{
    ViewData["Title"] = "Importar Funcionários";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <h1 class="mb-0">Importação em massa</h1>
    <div class="d-flex gap-2">
        <a asp-action="ModeloImportacao" class="btn btn-outline-secondary">Baixar modelo</a>
        <a asp-action="Index" class="btn btn-outline-primary">Voltar</a>
    </div>
</div>

<div class="alert alert-info">
    <p class="mb-1">Use o modelo CSV para cadastrar rapidamente vários supervisores ou mecânicos. Campos esperados:</p>
    <ul class="mb-0">
        <li><strong>NomeCompleto</strong> – obrigatório</li>
        <li><strong>Email</strong> – obrigatório</li>
        <li><strong>Cargo</strong> – Supervisor ou Mecanico</li>
        <li><strong>PercentualComissao</strong> – use 0 para supervisores</li>
        <li><strong>Senha</strong> – opcional (será <code>P@ssw0rd!</code> se vazio)</li>
    </ul>
</div>

<form asp-action="Import" method="post" enctype="multipart/form-data" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Arquivo" class="form-label"></label>
            <input asp-for="Arquivo" type="file" class="form-control" accept=".csv,text/csv" />
            <span asp-validation-for="Arquivo" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success">Enviar planilha</button>
    </div>
</form>

@if (Model.Processado)
{
    <div class="alert alert-success mt-4">
        Foram importados @Model.TotalImportados funcionário(s).
    </div>

    if (Model.Erros?.Any() == true)
    {
        <div class="alert alert-warning">
            <h5 class="mb-2">Ocorreram @Model.Erros.Count falha(s):</h5>
            <ul class="mb-0">
                @foreach (var erro in Model.Erros)
                {
                    <li>@erro</li>
                }
            </ul>
        </div>
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
