@model IEnumerable<Models.ApplicationUser>
@{
    ViewData["Title"] = "Funcionários";
}

<div class="d-flex align-items-center mb-3 flex-wrap gap-2">
    <h1 class="m-0 flex-grow-1 text-center">Funcionários</h1>
    <div class="d-flex gap-2">
        <a asp-action="Import" class="btn btn-outline-secondary">Importar planilha</a>
        <a asp-action="Create" class="btn btn-primary">Novo Funcionário</a>
    </div>
</div>

@if (TempData["Msg"] != null) { <div class="alert alert-success">@TempData["Msg"]</div> }

<table class="table table-striped table-hover datatable">
    <thead>
        <tr>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Cargo</th>
            <th class="text-end">Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model)
    {
        <tr>
            <td>@(string.IsNullOrWhiteSpace(u.NomeCompleto) ? "-" : u.NomeCompleto)</td>
            <td>@u.Email</td>
            <td>@(string.IsNullOrWhiteSpace(u.Cargo) ? "-" : u.Cargo)</td>
            <td class="text-end">
                <div class="btn-group btn-group-sm" role="group">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@u.Id">Editar</a>
                    <form asp-action="ToggleAtivo" asp-route-id="@u.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        @{
                            var ativo = !(u.LockoutEnd.HasValue && u.LockoutEnd.Value.UtcDateTime > DateTime.UtcNow);
                        }
                        <button type="submit" class="btn btn-outline-@(ativo ? "danger" : "success")">@(ativo ? "Desativar" : "Reativar")</button>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
