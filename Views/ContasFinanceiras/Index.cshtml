@model IEnumerable<Models.ContaFinanceira>
@{
    ViewData["Title"] = "Contas Financeiras";
}

<div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
    <div>
        <h1 class="mb-0">Contas financeiras</h1>
        <small class="text-muted">@ViewBag.OficinaNome</small>
    </div>
    <div>
        <a class="btn btn-outline-secondary me-2" asp-controller="Financeiro" asp-action="Index">Painel financeiro</a>
        <a class="btn btn-primary" asp-action="Create">Adicionar conta</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Banco</th>
                <th>Agência</th>
                <th>Conta</th>
                <th class="text-end">Saldo inicial</th>
                <th>Status</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var conta in Model)
            {
                <tr>
                    <td>@conta.Nome</td>
                    <td>@conta.Tipo</td>
                    <td>@conta.Banco</td>
                    <td>@conta.Agencia</td>
                    <td>@conta.NumeroConta</td>
                    <td class="text-end">@conta.SaldoInicial.ToString("C")</td>
                    <td>
                        <span class="badge @(conta.Ativo ? "bg-success" : "bg-secondary")">
                            @(conta.Ativo ? "Ativa" : "Inativa")
                        </span>
                    </td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@conta.Id">Editar</a>
                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@conta.Id" />
                            <button type="submit" class="btn btn-sm @(conta.Ativo ? "btn-outline-warning" : "btn-outline-success")">
                                @(conta.Ativo ? "Desativar" : "Ativar")
                            </button>
                        </form>
                    </td>
                </tr>
            }
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">Nenhuma conta cadastrada.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
