@model Models.ContaFinanceira
@{
    ViewData["Title"] = "Nova conta financeira";
}

<h1>Nova conta</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome</label>
                <input asp-for="Nome" class="form-control" required />
            </div>
            <div class="mb-3">
                <label asp-for="Tipo" class="form-label">Tipo</label>
                <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<Models.FinanceiroTipoConta>()"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Banco" class="form-label">Banco</label>
                <input asp-for="Banco" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Agencia" class="form-label">Agência</label>
                <input asp-for="Agencia" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="NumeroConta" class="form-label">Número da conta</label>
                <input asp-for="NumeroConta" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="SaldoInicial" class="form-label">Saldo inicial</label>
                <input asp-for="SaldoInicial" class="form-control" type="number" step="0.01" />
            </div>
            <div class="form-check mb-3">
                <input asp-for="Ativo" class="form-check-input" checked />
                <label class="form-check-label" asp-for="Ativo">Ativa</label>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </div>
        </form>
    </div>
 </div>
