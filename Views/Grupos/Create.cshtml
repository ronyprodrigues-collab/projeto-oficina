@model Models.ViewModels.GrupoComOficinaViewModel
@{
    ViewData["Title"] = "Novo Grupo";
    var diretores = ViewBag.Diretores as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
}

<h1 class="mb-3">Novo Grupo</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="card mb-4">
        <div class="card-header">Dados do grupo</div>
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Descricao" class="form-label"></label>
                <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Diretor</label>
                <select asp-for="DiretorId" class="form-select" asp-items="diretores">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="DiretorId" class="text-danger"></span>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Plano</label>
                    <select asp-for="Plano" class="form-select" asp-items="Html.GetEnumSelectList<Models.PlanoConta>()"></select>
                </div>
                <div class="col-md-4">
                    <label asp-for="CorPrimaria" class="form-label">Cor primária</label>
                    <input asp-for="CorPrimaria" type="color" class="form-control form-control-color" />
                </div>
                <div class="col-md-4">
                    <label asp-for="CorSecundaria" class="form-label">Cor secundária</label>
                    <input asp-for="CorSecundaria" type="color" class="form-control form-control-color" />
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>Primeira oficina</span>
            <div class="form-check form-switch m-0">
                <input asp-for="CriarOficinaInicial" class="form-check-input" type="checkbox" role="switch" />
                <label class="form-check-label" asp-for="CriarOficinaInicial">Criar agora</label>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="OficinaNome" class="form-label">Nome</label>
                    <input asp-for="OficinaNome" class="form-control" />
                    <span asp-validation-for="OficinaNome" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="OficinaPlano" class="form-label">Plano da oficina</label>
                    <select asp-for="OficinaPlano" class="form-select" asp-items="Html.GetEnumSelectList<Models.PlanoConta>()"></select>
                </div>
            </div>
            <div class="mb-3 mt-3">
                <label asp-for="OficinaDescricao" class="form-label">Descrição</label>
                <textarea asp-for="OficinaDescricao" class="form-control" rows="2"></textarea>
            </div>
            <small class="text-muted">Essa primeira oficina já será criada vinculada ao grupo com contas e categorias padrão.</small>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
