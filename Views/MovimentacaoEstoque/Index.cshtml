@model IEnumerable<Models.MovimentacaoEstoque>
@{
    ViewData["Title"] = "Kardex";
    var pecas = ViewBag.Pecas as IEnumerable<Models.PecaEstoque>;
    var msg = TempData["Msg"] as string;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Kardex / Movimentações</h1>
    <div>
        <a asp-action="Entrada" class="btn btn-success">+ Entrada</a>
        <a asp-action="Saida" class="btn btn-outline-warning ms-2">- Saída</a>
    </div>
</div>

@if (!string.IsNullOrEmpty(msg))
{
    <div class="alert alert-success">@msg</div>
}

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <label class="form-label">Peça</label>
        <select class="form-select" name="pecaId">
            <option value="">Todas</option>
            @if (pecas != null)
            {
                foreach (var p in pecas)
                {
                    <option value="@p.Id" selected="@(ViewBag.PecaSelecionada == p.Id)">
                        @p.Nome (@p.SaldoAtual @p.UnidadeMedida)
                    </option>
                }
            }
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-outline-light w-100">Filtrar</button>
    </div>
</form>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Data</th>
            <th>Peça</th>
            <th>Tipo</th>
            <th class="text-end">Qtd</th>
            <th class="text-end">Valor unit.</th>
            <th>Observação</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var mov in Model)
    {
        <tr class="@(mov.Tipo == "Saida" ? "table-danger" : "table-success")">
            <td>@mov.DataMovimentacao.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
            <td>@mov.PecaEstoque?.Nome</td>
            <td>@mov.Tipo</td>
            <td class="text-end">@mov.Quantidade</td>
            <td class="text-end">@mov.ValorUnitario.ToString("C")</td>
            <td>@mov.Observacao</td>
        </tr>
    }
    </tbody>
</table>
