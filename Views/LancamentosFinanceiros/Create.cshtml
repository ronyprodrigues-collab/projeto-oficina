@model Models.ViewModels.LancamentoFinanceiroInputModel
@using Models
@{
    ViewData["Title"] = "Novo lançamento financeiro";
}

<div class="container py-4">
    <h1>Registrar lançamento</h1>
    <form asp-action="Create" method="post" class="row g-3">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <label asp-for="Tipo" class="form-label">Tipo</label>
            <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<FinanceiroTipoLancamento>()" id="tipo-select"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="FormaPagamento" class="form-label">Forma de pagamento</label>
            <select asp-for="FormaPagamento" class="form-select" asp-items="Html.GetEnumSelectList<Models.FinanceiroFormaPagamento>()"></select>
        </div>
        <div class="col-md-4">
            <label asp-for="CategoriaFinanceiraId" class="form-label">Categoria</label>
            <select asp-for="CategoriaFinanceiraId" class="form-select" required>
                <option value="">Selecione</option>
                @foreach (var cat in Model.Categorias)
                {
                    <option value="@cat.Key" selected="@(Model.CategoriaFinanceiraId == cat.Key ? "selected" : null)">@cat.Value</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label asp-for="ContaPadraoId" class="form-label">Conta padrão</label>
            <select asp-for="ContaPadraoId" class="form-select">
                <option value="">Definir depois</option>
                @foreach (var conta in Model.Contas)
                {
                    <option value="@conta.Key" selected="@(Model.ContaPadraoId == conta.Key ? "selected" : null)">@conta.Value</option>
                }
            </select>
        </div>

        @if (Model.Tipo == FinanceiroTipoLancamento.Receita)
        {
            <div class="col-md-6">
                <label asp-for="ClienteId" class="form-label">Cliente</label>
                <select asp-for="ClienteId" class="form-select">
                    <option value="">Não definido</option>
                    @foreach (var cli in Model.Clientes)
                    {
                        <option value="@cli.Key" selected="@(Model.ClienteId == cli.Key ? "selected" : null)">@cli.Value</option>
                    }
                </select>
            </div>
        }
        <div class="col-md-6">
            <label asp-for="ParceiroNome" class="form-label">@((Model.Tipo == FinanceiroTipoLancamento.Receita) ? "Responsável/Pagador" : "Fornecedor")</label>
            <input asp-for="ParceiroNome" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <input asp-for="Descricao" class="form-control" required />
        </div>
        <div class="col-md-3">
            <label asp-for="NumeroDocumento" class="form-label">Documento</label>
            <input asp-for="NumeroDocumento" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="DataCompetencia" class="form-label">Competência</label>
            <input asp-for="DataCompetencia" class="form-control" type="date" />
        </div>

        <div class="col-md-3">
            <label asp-for="ValorParcela" class="form-label">Valor por parcela</label>
            <input asp-for="ValorParcela" class="form-control" type="number" step="0.01" required />
        </div>
        <div class="col-md-3">
            <label asp-for="QuantidadeParcelas" class="form-label">Parcelas</label>
            <input asp-for="QuantidadeParcelas" class="form-control" type="number" min="1" />
        </div>
        <div class="col-md-3">
            <label asp-for="DataPrimeiroVencimento" class="form-label">Primeiro vencimento</label>
            <input asp-for="DataPrimeiroVencimento" class="form-control" type="date" />
        </div>
        <div class="col-md-3">
            <label asp-for="IntervaloDias" class="form-label">Intervalo (dias)</label>
            <input asp-for="IntervaloDias" class="form-control" type="number" min="1" />
        </div>

        <div class="col-12">
            <label asp-for="Observacao" class="form-label">Observações</label>
            <textarea asp-for="Observacao" class="form-control" rows="3"></textarea>
        </div>

        <div class="col-12 d-flex justify-content-between">
            <a class="btn btn-outline-secondary" asp-action="Index">Voltar</a>
            <button type="submit" class="btn btn-primary">Salvar lançamento</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('tipo-select')?.addEventListener('change', function () {
            const valor = this.value;
            const url = new URL(window.location.href);
            url.searchParams.set('tipo', valor);
            window.location.href = url.toString();
        });
    </script>
}
